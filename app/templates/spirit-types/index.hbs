<h1>Spirit Types</h1>

{{#link-to 'spiritTypes.new' class="btn btn-primary"}}New Spirit Type{{/link-to}}

<div class="row">
  <div class="col-md-8">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Notes</th>
        </tr>
      </thead>
      <tbody>
        {{#each model as |type|}}
          {{#link-to "spiritTypes.show" type.id tagName="tr" class="clickable"}}
            <td>{{type.id}}</td>
            <td>{{type.name}}</td>
            <td>{{type.notes}}</td>
          {{/link-to}}
        {{/each}}
      </tbody>
    </table>
  </div>
</div>
