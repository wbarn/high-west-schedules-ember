<div class="col-sm-3">
  {{view "select"
    class="form-control"
    content=spiritTypes
    optionValuePath="content.id"
    optionLabelPath="content.name"
    selection=item.spiritType
    prompt="Select one"}}
</div>
<div class="col-sm-1">
  {{input value=item.age type="number" placeholder="Age" class="form-control"}}
</div>
<div class="col-sm-2">
  {{input value=item.proofGallons type="number" placeholder="Proof Gallons" class="form-control"}}
</div>
<div class="col-sm-3">
  {{input value=item.notes type="text" placeholder="Notes" class="form-control"}}
</div>
<div class="col-sm-2">
  <button {{action "save" item}} class="btn btn-primary btn-xs">Save</button>
</div>
