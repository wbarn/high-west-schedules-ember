<form class="form-inline">
  <div class="form-group">
    <label for="input">{{label}}</label>
    <input id="input" type="text" class="form-control" value="{{value}}" {{action 'change' on='change'}}>
  </div>

  <button type="submit" class="btn btn-default" {{action 'change'}}>{{buttonText}}</button>
</form>
