<h1>Edit Recipe: <em>{{model.name}}</em></h1>

<form class="form-horizontal">
  <div class="form-group">
    <label for="name" class="col-sm-2 col-md-1 control-label">Name</label>
    <div class="col-sm-10 col-md-4">
      {{input id="name" value=model.name class="form-control" placeholder="Enter name"}}
    </div>
  </div>
  <div class="form-group">
    <label for="proof" class="col-sm-2 col-md-1 control-label">Proof</label>
    <div class="col-sm-10 col-md-4">
      {{input id="proof" type="number" value=model.proof class="form-control" placeholder="Enter proof"}}
    </div>
  </div>
  <div class="form-group">
    <label for="notes" class="col-sm-2 col-md-1 control-label">Notes</label>
    <div class="col-sm-10 col-md-4">
      {{textarea id="notes" value=model.notes class="form-control" placeholder="Enter notes(optional)"}}
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10 col-md-offset-1 ">
      <button type="submit" class="btn btn-primary" {{action 'updateRecipe'}}>Save</button>
      {{#link-to 'recipes.delete' model class="btn btn-danger"}}Delete{{/link-to}}
      <button type="button" class="btn btn-default" {{action 'cancelUpdateRecipe' model}}>Cancel</button>
    </div>
  </div>
</form>
