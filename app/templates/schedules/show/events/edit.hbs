<h3>Edit Event: {{moment-format model.date 'MM/DD/YY'}}</h3>

<hr>

<form class="form-horizontal">
  <div class="form-group">
    <label for="date" class="col-sm-2 col-md-1 control-label">Date</label>
    <div class="col-sm-10 col-md-5">
      {{bootstrap-datepicker value=model.date class="form-control"}}
    </div>
  </div>
  <div class="form-group">
    <label for="notes" class="col-sm-2 col-md-1 control-label">Notes</label>
    <div class="col-sm-10 col-md-5">
      {{textarea value=model.notes class="form-control"}}
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10 col-md-offset-1 col-md-5">
      <button {{action 'updateEvent' model}} class="btn btn-primary">Save</button>
      <button {{action 'cancelUpdateEvent' model}} class="btn btn-default">Cancel</button>
    </div>
  </div>
</form>
